@model AppMVC.Controllers.HomeController

@{
    ViewBag.Title = "Home Page";
}

<div class="panel-default">
    <h1>ASP.NET</h1>
    <p class="lead">Test MVC: Inicia sesion.</p>
    
</div>

<div class="container">
    <h1>Login</h1>
    <form action="/Home/login" method="post">
        <div class="form-group" id="usrname">
            <label>Username: </label>
            <input type="text" name="username" value="" />
        </div>
        <div class="form-group" id="psswd">
            <label>Password</label>
            <input type="password" name="passwd" value="" />
        </div>
        <div class="form-group">
            <button class="btn">Iniciar Sesion</button>
            @{
                string valid = Convert.ToString(Session["LogAlert"]);
                if ( valid == "invalid")
                {
                    <script>alert("Credenciales incorrectas");</script>
                }
            }
        </div>


    </form>
  
</div>

